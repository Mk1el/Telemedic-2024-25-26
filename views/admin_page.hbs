<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>{{title}}</title>
    <style>
        body {
            background-color: #f0f4f8; /* Light background color */
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            background: linear-gradient(90deg, #4CAF50, #8BC34A); /* Green gradient */
            color: white;
        }
        .navbar-brand, .nav-link {
            color: white !important; /* White text */
        }
        .nav-link:hover {
            background-color: #388E3C; /* Darker green on hover */
            border-radius: 5px;
        }
        .container {
            margin-top: 80px; /* Space for fixed navbar */
        }
        h1 {
            color: #2196F3; /* Blue title */
            margin-bottom: 20px;
        }
        p {
            color: #666; /* Gray text */
        }
        .card {
            background-color: #ffffff; /* White card background */
            border: none; /* No border */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            transition: transform 0.3s; /* Smooth hover effect */
        }
        .card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
        }
        .card-title {
            color: #FF5722; /* Orange for titles */
            font-size: 1.5rem; /* Larger font size */
        }
        .card-text {
            font-size: 2.5rem; /* Larger font for counts */
            font-weight: bold;
            color: #333; /* Dark text color */
        }
        .btn-info {
            background-color: #00BCD4; 
            border: none; 
        }
        .btn-info:hover {
            background-color: orange;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/doctors">View Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/patients">View Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/add_doctor">Add New Doctor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/appointments">Manage Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/add_appointments">Add Appointments</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>{{title}}</h1>
        <p>Welcome to the admin dashboard!</p>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Patients</h5>
                        <p class="card-text" id="totalPatients">{{totalPatients}}</p>
                        <button class="btn btn-info" onclick="viewPatients()">View Patients</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Doctors</h5>
                        <p class="card-text" id="totalDoctors">{{totalDoctors}}</p>
                        <button class="btn btn-info" onclick="viewDoctors()">View Doctors</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Appointments</h5>
                        <p class="card-text" id="totalAppointments">{{totalAppointments}}</p>
                        <button class="btn btn-info" onclick="viewAppointments()">View Appointments</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewPatients() {
            window.location.href = '/admin/patients';
        }

        function viewDoctors() {
            window.location.href = '/admin/doctors';
        }

        function viewAppointments() {
            window.location.href = '/admin/appointments';
        }
    </script>
</body>
</html>

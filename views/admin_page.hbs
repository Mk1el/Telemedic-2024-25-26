<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/style.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #007bff;
            z-index: 1000; 
        }
        .navbar-brand, .nav-link {
            color: blue;
        }
        .nav-link:hover {
            color: #ffc107;
        }
        h1, h2 {
            color: #343a40;
        }
        .table {
            background-color: white;
        }
        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }
        .table-bordered th, .table-bordered td {
            border: 1px solid #dee2e6;
        }
        .table th {
            background-color: #007bff;
            color: white;
        }
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
            .nav-link {
                font-size: 1rem;
            }
        }
    </style>
    <title>{{title}}</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/doctors">View Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/patients">View Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/add_doctor">Add New Doctor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/appointments">Manage Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/add_appointments">Add Appointments</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>{{title}}</h1>
        <p>Welcome to the admin dashboard!</p>

        <h2>Patients</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each patients}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="updatePatient({{this.id}})">Update</button>
                        <button class="btn btn-danger btn-sm" onclick="deletePatient({{this.id}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <h2>Doctors</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Specialization</th>
                    <th>Email</th>
                    <th>Schedule</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each doctors}}
                <tr>
                    <td>{{this.d_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.specialization}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.schedule}}</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="updateDoctor({{this.d_id}})">Update</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteDoctor({{this.d_id}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updatePatient(patientId) {
           
            window.location.href = `/admin/patients/update/${patientId}`;
        }

        function deletePatient(patientId) {
            if (confirm("Are you sure you want to delete this patient?")) {
                
                fetch(`/admin/patients/${patientId}`, { method: 'DELETE' })
                    .then(response => {
                        if (response.ok) {
                            alert("Patient deleted successfully.");
                            location.reload(); 
                        } else {
                            alert("Error deleting patient.");
                        }
                    });
            }
        }

        function updateDoctor(doctorId) {
            // Redirect to the update page or open a modal for updating doctor details
            window.location.href = `/admin/doctors/update/${doctorId}`;
        }

        function deleteDoctor(doctorId) {
            if (confirm("Are you sure you want to delete this doctor?")) {
                // Make a DELETE request to the server to remove the doctor
                fetch(`/admin/doctors/${doctorId}`, { method: 'DELETE' })
                    .then(response => {
                        if (response.ok) {
                            alert("Doctor deleted successfully.");
                            location.reload(); // Refresh the page to see the updated list
                        } else {
                            alert("Error deleting doctor.");
                        }
                    });
            }
        }
    </script>
</body>
</html>

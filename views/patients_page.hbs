<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Patients Page</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            color: #007bff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }
        .lead {
            color: #6c757d;
        }
        .image-section img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }
        .card {
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }
        .nav-link {
            transition: background-color 0.3s, color 0.3s;
        }
        .nav-link:hover {
            background-color: #007bff;
            color: white;
        }
        .btn-success:hover {
            background-color: #28a745;
            border-color: #218838;
        }
        .modal-content {
            border-radius: 10px;
        }
        .appointment-icon {
            font-size: 24px;
            margin-right: 10px;
            color: #007bff;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Welcome to Your Patient Portal, {{patients.first_name}}!</h1>

        <nav class="nav nav-pills flex-column flex-sm-row mb-4">
            <a class="flex-sm-fill text-sm-center nav-link active" href="#appointments" data-bs-toggle="collapse"><i class="fas fa-calendar-alt appointment-icon"></i>Your Appointments</a>
            <a class="flex-sm-fill text-sm-center nav-link" href="#bookAppointmentModal" data-bs-toggle="modal"><i class="fas fa-calendar-plus appointment-icon"></i>Book Appointment</a>
            <a class="flex-sm-fill text-sm-center nav-link" href="/doctors_patientpage"><i class="fas fa-user-md appointment-icon"></i>Doctor Schedule</a>
            <a class="flex-sm-fill text-sm-center nav-link" href="https://zoom.us/j/your_meeting_id" target="_blank" rel="noopener noreferrer"><i class="fas fa-video appointment-icon"></i>Video Call</a>
            <a class="flex-sm-fill text-sm-center nav-link" href="#update-profile" data-bs-toggle="collapse"><i class="fas fa-user-edit appointment-icon"></i>Update Profile</a>
            <a class="flex-sm-fill text-sm-center nav-link btn btn-danger" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </nav>

        <div class="text-center mb-4">
            <p class="lead">At our telemedicine platform, we prioritize your health and well-being. Our experienced team is here to assist you every step of the way.</p>
        </div>

        <div class="image-section text-center mb-4">
            <img src="https://via.placeholder.com/800x300?text=Telemedicine+Care" alt="Telemedicine Care">
        </div>

        <div id="doctor-schedule" class="collapse mb-4">
            <h2>Doctor Schedule</h2>
            <table class="table table-striped" id="doctorScheduleTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Specialization</th>
                        <th>Email</th>
                        <th>Schedule</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="doctorScheduleBody">
            {{#each doctors}}
            <tr>
                <td>{{this.first_name}}</td>
                <td>{{this.specialization}}</td>
                <td>{{this.email}}</td>
                <td>{{this.schedule}}</td>
                <td>
                    <button class="btn btn-primary" data-doctor-id="{{this.d_id}}">Schedule Appointment</button>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>

    </div>

        <div id="appointments" class="collapse mb-4">
            <h2>Your Appointments</h2>
            <div id="appointmentsList" class="list-group"></div>
        </div>

        <div id="update-profile" class="collapse mb-4">
            <h2>Update Profile</h2>
            <form id="updateProfileForm">
                <div class="mb-3">
                    <label for="first_name" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" required>
                </div>
                <div class="mb-3">
                    <label for="last_name" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" required>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <button type="submit" class="btn btn-success">Update Profile</button>
            </form>
        </div>

        <!-- Modal for Scheduling Appointment -->
        <div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="scheduleModalLabel">Schedule Appointment with <span id="doctorName"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="scheduleAppointmentForm">
                            <div class="mb-3">
                                <label for="appointment_date" class="form-label">Appointment Date</label>
                                <input type="date" class="form-control" id="appointment_date" name="appointment_date" required>
                            </div>
                            <div class="mb-3">
                                <label for="appointment_time" class="form-label">Appointment Time</label>
                                <input type="time" class="form-control" id="appointment_time" name="appointment_time" required>
                            </div>
                            <input type="hidden" id="selectedDoctorId" name="selectedDoctorId">
                            <button type="submit" class="btn btn-primary">Schedule</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="bookAppointmentModal" tabindex="-1" aria-labelledby="bookAppointmentLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="bookAppointmentLabel">Book an Appointment</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="bookAppointmentForm">
                            <div class="mb-3">
                                <label for="doctor" class="form-label">Select Doctor</label>
                                <select class="form-select" id="doctor" name="doctor" required>
                                    <option value="">Choose...</option>
                                    <!-- Doctor options will be populated here -->
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="bookAppointment_date" class="form-label">Appointment Date</label>
                                <input type="date" class="form-control" id="bookAppointment_date" name="appointment_date" required>
                            </div>
                            <div class="mb-3">
                                <label for="bookAppointment_time" class="form-label">Appointment Time</label>
                                <input type="time" class="form-control" id="bookAppointment_time" name="appointment_time" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Book</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Function to fetch doctor details
        // Function to fetch doctor details
function fetchDoctorDetails() {
    fetch('/doctors') // Adjust this URL based on your actual endpoint
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(doctors => {
            const tableBody = document.getElementById('doctorScheduleBody');
            tableBody.innerHTML = ''; // Clear existing content
            doctors.forEach(doctor => {
                // Populate the table
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${doctor.first_name} ${doctor.last_name}</td>
                    <td>${doctor.specialization}</td>
                    <td>${doctor.email}</td>
                    <td>${doctor.available_days.join(', ')}</td> <!-- Assuming available_days is an array -->
                    <td>
                        <button class="btn btn-primary" data-doctor-id="${doctor.d_id}" data-bs-toggle="modal" data-bs-target="#scheduleModal">Schedule Appointment</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        })
        .catch(error => {
            console.error('Error fetching doctor details:', error);
        });
}

// Call the function when the page loads
document.addEventListener('DOMContentLoaded', fetchDoctorDetails);

    </script>
</body>
</html>

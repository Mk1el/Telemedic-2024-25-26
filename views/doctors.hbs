<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>{{title}}</title>
</head>
<body>
    <div class="container mt-4">
        <h1>{{title}}</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Specialization</th>
                    <th>Email</th>
                    <th>Schedule</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each doctors}}
                <tr>
                    <td>{{this.d_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.specialization}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.schedule}}</td>
                    <td>
                        <a href="/admin/doctors/edit/{{this.d_id}}" class="btn btn-warning btn-sm">Edit</a>
                        <button onclick="deleteDoctor({{this.d_id}})" class="btn btn-danger btn-sm" 
                                style="display:inline;" 
                                onclick="return confirm('Are you sure you want to delete this doctor?');">
                            Delete
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script>
        async function deleteDoctor(id) {
            if (confirm('Are you sure you want to delete this doctor?')) {
                try {
                    const response = await fetch(`/admin/doctors/${id}`, {
                        method: 'DELETE',
                    });
                    if (response.ok) {
                        window.location.reload(); 
                    } else {
                        console.error('Failed to delete doctor.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
